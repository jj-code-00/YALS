{
  "tasks": {
    "dev": "deno run -A --watch main.ts",
    "start": "deno run --allow-read --allow-env --allow-net --allow-ffi main.ts",
    "compile": "deno compile --allow-read --allow-write=api_tokens.yml --allow-env --allow-net --allow-ffi main.ts",
    "bindings": "cd bindings && cmake . -B build && cmake --build build"
  },
  "imports": {
    "@/": "./",
    "@core/asyncutil": "jsr:@core/asyncutil@^1.2.0",
    "hono": "npm:hono@^4.6.14",
    "@huggingface/jinja": "npm:@huggingface/jinja@^0.3.2",
    "@scalar/hono-api-reference": "npm:@scalar/hono-api-reference@^0.5.165",
    "@std/async": "jsr:@std/async@^1.0.9",
    "@std/path": "jsr:@std/path@^1.0.8",
    "hono-openapi": "npm:hono-openapi@^0.3.0",
    "logtape": "jsr:@logtape/logtape@^0.8.0",
    "@std/yaml": "jsr:@std/yaml@^1.0.5",
    "zod": "npm:zod@^3.24.1",
    "zod-openapi": "npm:zod-openapi@^4.2.1"
  },
  "fmt": {
    "indentWidth": 4,
    "semiColons": true,
    "include": ["**/*.ts"],
    "lineWidth": 80
  }
}
